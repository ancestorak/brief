{
    "name": "Brief",
    "version": "2.4.0b1+git",
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "brief@mozdev.org",
            "strict_min_version": "52.0",
            "strict_max_version": "56.*"
        }
    },
    "default_locale": "en",
    "permissions": ["contextMenus", "storage"],
    "background": {
        "scripts": ["scripts/prefs.js", "scripts/database.js", "background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/brief-icon-16.png",
            "32": "icons/brief-icon-32.png",
            "64": "icons/brief-icon-64.png"},
        "default_title": "Brief"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+D" //XXX: Temporary changed from Ctrl+Alt+D, mozilla bug 1364784 (Ctrl+Alt+... not allowed)
            }
        }
    }
}
